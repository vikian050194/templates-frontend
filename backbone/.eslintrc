{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "impliedStrict": true
        },
        "sourceType": "module"
    },
    "extends": ["eslint:recommended"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": ["warn", {
            "allow": ["info", "error"]
        }],
        "no-multiple-empty-lines": ["error", {
            "max": 1
        }]
    },
    "globals": {
        "Backbone": "readonly"
    }
}